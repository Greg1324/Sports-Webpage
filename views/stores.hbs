<h2 class="text-2xl font-bold mb-3 underline">Stores</h2>
<!-- jQuery for delete request -->
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>

{{! Create a table }}
<table class="border-collapse border border-black table-auto my-5" id="stores-table">

    {{! Header section }}
    <thead class="bg-neworange">

        {{! For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders }}
        <tr>
            {{#each data.[0]}}
                <th class="py-3 px-1 border border-black">
                    {{@key}}
                </th>
            {{/each}}
            <th class="py-3 px-1 border border-black">delete</th>
        </tr>
    </thead>

    {{! Body section }}
    <tbody>

        {{! For each row, print the info in order }}
        {{#each data}}
            <tr data-value={{this.store_id}} class="py-3 px-1 border border-black">
                <td class="py-3 px-1 border border-black">{{this.store_id}}</td>
                <td class="py-3 px-1 border border-black">{{this.name}}</td>
                <td class="py-3 px-1 border border-black">{{this.location}}</td>
                <td><button class="px-1.5 py-0.5 m-1 border border-black rounded-sm bg-gray-200 text-sm cursor-pointer hover:text-red-600" onclick="deleteStore({{this.store_id}})">Delete</button></td>
            </tr>
        {{/each}}
    </tbody>
</table>

<div class="my-5 p-3 border-2 border-black w-1/3">
    <h3 class="mb-3 text-xl font-semi-bold underline">Create new Store</h3>
    <form class="new-store-form" id="add-store-form-ajax">
        <div class="new-store-form my-1.5">
            <label class="block text-sm font-semibold leading-6 text-gray-900" for="input-store-name">Store Name </label>
            <input class="block rounded-md border-0 px-3.5 py-2  shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600" type="text" name="input-store-name" id="input-store-name" required />
        </div>
        <div class="new-store-form my-1.5">
            <label class="block text-sm font-semibold leading-6 text-gray-900" for="input-location">Location </label>
            <input class="block rounded-md border-0 px-3.5 py-2  shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600" type="text" name="input-location" id="input-location" required />
        </div>
        <div class="new-store-form mt-3">
            <input class="px-4 py-2 rounded-md cursor-pointer font-bold bg-neworange" type="submit" value="Create" />
        </div>
    </form>
</div>

{{! Embed our javascript to handle the DOM manipulation and AJAX request }}
<script src="./js/add_store.js"></script>
<script src="./js/delete_store.js"></script>