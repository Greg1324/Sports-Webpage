<h2 class="text-2xl font-bold mb-3 underline">Supplier Intersection Table</h2>
<!-- jQuery for delete request -->
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>

{{! Create a table }}
<table class="border-collapse border border-black table-auto my-5" id="suppliers-has-stores-table">

    {{! Header section }}
    <thead class="bg-neworange">

        {{! For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders }}
        <tr>
            {{#each data.[0]}}
                <th class="py-3 px-1 border border-black">
                    {{@key}}
                </th>
            {{/each}}
        </tr>
    </thead>

    {{! Body section }}
    <tbody>

        {{! For each row, print the info in order }}
        {{#each data}}
            <tr class="py-3 px-1 border border-black">
                <td class="py-3 px-1 border border-black">{{this.Suppliers_supplier_id}}</td>
                <td class="py-3 px-1 border border-black">{{this.Stores_store_id}}</td>
            </tr>
        {{/each}}
    </tbody>

</table>
<div class="my-5 p-3 border-2 border-black w-1/3">
    <h3 class="mb-3 text-xl font-semi-bold underline">Create new Supplier_has_Stores</h3>
    <form class="new-supplier-has-stores-form" id="add-supplier-has-stores-form-ajax">
        <div class="new-supplier-has-stores-form my-1.5">
                    <label class="block text-sm font-semibold leading-6 text-gray-900" for="input-supplier-select">Choose a Supplier </label>
                    <select class="block rounded-md shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600" name="input-supplier-select" id="input-supplier-select" required>
                        <option value="">Please choose an option</option>
                        <option value="1">Gildan</option>
                        <option value="2">Apparel Supply Inc.</option>
                        <option value="3">PDX Soles Inc.</option>
                    </select>
                </div>
        <div class="new-supplier_has_stores-form my-1.5">
                    <label class="block text-sm font-semibold leading-6 text-gray-900" for="input-store-select">Choose a Store</label>
                    <select class="block rounded-md shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600" name="input-store-select" id="input-store-select" required>
                        <option value="">Please choose an option</option>
                        <option value="1">Checkmark One</option>
                        <option value="2">Checkmark OSU</option>
                        <option value="3">Checkmark Outlet</option>
                    </select>
                </div>
        <div class="new-supplier-has-stores-form mt-3">
            <input class="px-4 py-2 rounded-md cursor-pointer font-bold bg-neworange" type="submit" value="Create" />
        </div>
    </form>
</div>

<script src="./js/add_suppliers_has_stores.js"></script>